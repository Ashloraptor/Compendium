<form id="plantInput">
  <div class="mb-3">
    <label for="plantName" class="form-label">Plant Name</label>
    <input type="text" class="form-control" id="plantName" >
    <div id="emailHelp" class="form-text"></div>
  </div>
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form> 


<div class="plantCard" style="width: 18rem;">
        <img src="{{image}}" class="card-img-top" alt="">
        <div class="card-body">
            <h5 id="plantName">{{name}}</h5>
            <p class="card-text" id="description">{{description}}</p>
        </div>
        <ul class="list-group list-group-flush">
            <li id="edible_parts" class="list-group-item">Edible Parts: {{edible_parts}}</li>
            <li id="watering" class="list-group-item">Watering: {{watering.min}} - {{watering.max}} inches</li>
        </ul>
        <div class="card-body">
            <a href="{{url}}" id="url" class="card-link">More Information</a>
            <a href="{{image}}" id="image" class="card-link">Image</a>
        </div>
    </div>

<script src="./js/plant.js"></script>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>