<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3 id="form-heading" class="form-label">Perform new search:</h3>

    <form id="search-form" class="form">
      <div class="form-inline form-group">
        <div class="input-group">
          <input type="text" id="search-input" name="search" placeholder="Plant name" aria-controls="plant search" />
          <button type="submit" class="btn search-button" id="search-button">Search</button>
        </div>
        <div id="history"></div>
      </div>

    </form>

