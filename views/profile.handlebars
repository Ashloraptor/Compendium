<div class="row">
  <div class="col-auto">
    <h2>Welcome {{name}}</h2>
  </div>
</div>

<div class="row mt-4">
  {{#if plants.length}}
  <div class="col-md-6 plant-list">
    <h3>Current plants:</h3>

    {{#each plants as |plant|}}
    <div class="plantCard" style="width: 18rem;">
      <img class="plant-image card-img-top" src="{{plant.image}}" alt="">
      <div class="card-body">
        <h5 class="plant-name">{{plantData.name}}</h5>
        <p class="plant-description card-text">{{plantData.description}}</p>
        <p class="plant-comment">Comment: {{plantData.comment}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <div class="col-md-6 plant-list">
    <p>No saved plants.</p>
  </div>
  {{/if}}
</div>
<script src="./js/profile.js"></script>