<div class="row">
  <div class="col-auto">
    <h2>Welcome <span id="userName"></span></h2>
  </div>
</div>

<div class="row mt-4">
  {{#if userProfile.plants.length}}
  <div class="col-md-6 plant-list">
    <h3>Current plants:</h3>
    <div id="plantsContainer">
      <!-- Plant items will be dynamically added here -->
      {{#each userProfile.plants as |plant|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/plant/{{plant.id}}">{{plant.name}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger delete-btn" data-id="{{plant.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
  {{else}}
  <div class="col-md-6 plant-list">
    <p>No saved plants.</p>
  </div>
  {{/if}}
</div>
